<?xml version="1.0" encoding="UTF-8"?>

<?import gui.searchpanel.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:id="rootNode" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="618.0" prefWidth="756.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="gui.MainController">
    <children>

        <VBox fx:id="searchPanel" layoutX="14.0" layoutY="57.0" minHeight="200.0" minWidth="200.0" prefHeight="200.0"
              prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" HBox.hgrow="NEVER">
            <children>
                <Label text="Суд:"/>
                <ChoiceBox prefHeight="31.0" prefWidth="185.0"/>
                <Separator prefWidth="200.0"/>
                <Label text="Тип дела:"/>
                <ChoiceBox prefHeight="31.0" prefWidth="191.0"/>
                <CheckBox mnemonicParsing="false" text="Судебные поручения"/>
                <Separator prefWidth="200.0"/>
                <Label text="Дата регистрации:"/>
                <GridPane vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="83.0" minWidth="10.0" prefWidth="27.0"/>
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                           prefWidth="153.0"/>
                    </columnConstraints>
                    <children>
                        <Label text="с:"/>
                        <DatePicker maxWidth="1.7976931348623157E308" prefHeight="31.0" prefWidth="116.0"
                                    GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
                        <Label text="по:" GridPane.rowIndex="1"/>
                        <DatePicker maxWidth="1.7976931348623157E308" prefHeight="31.0" prefWidth="82.0"
                                    GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
                    </children>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>
                <Separator prefWidth="200.0"/>
                <Label text="Минимальная сумма:"/>
                <MySpinner fx:id="minCost" value="10000" step="1000" min="0" max="1000000000000"/>
                <Separator prefWidth="200.0" VBox.vgrow="SOMETIMES"/>
                <Label text="Анализировать дел:"/>
                <MySpinner fx:id="searchLimit" value="1000" step="10" min="0" max="1000" />
                <Separator prefWidth="200.0"/>
                <Button alignment="BASELINE_CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false"
                        onAction="#casesSearchClick" prefHeight="31.0" prefWidth="185.0" text="Искать"
                        textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Button>
                <Separator prefWidth="200.0"/>
                <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
                <Separator prefWidth="200.0"/>
                <Button alignment="BASELINE_CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#exportCasesToExcel" prefHeight="31.0" prefWidth="190.0" text="Экспорт"
                        textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </VBox>


        <TableView fx:id="casesTable" layoutX="90.0" layoutY="51.0" prefHeight="609.0" prefWidth="540.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="casesTable_Id" prefWidth="75.0" text="Дело"/>
                <TableColumn fx:id="casesTable_createdDate" prefWidth="75.0" text="Заведено"/>
                <TableColumn fx:id="casesTable_plaintiff" prefWidth="75.0" text="Истец"/>
                <TableColumn fx:id="casesTable_defendant" prefWidth="75.0" text="Ответчик"/>
                <TableColumn fx:id="casesTable_cost" prefWidth="75.0" text="Сумма иска"/>
            </columns>
        </TableView>

    </children>
</HBox>
